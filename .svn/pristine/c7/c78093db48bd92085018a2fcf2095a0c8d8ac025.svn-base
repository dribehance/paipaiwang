<ul class="ls bg-white">
    <li class="col-xs-6">
        <label class="ng-label small active-{{ checked == 'underway' }}" ng-click="getStartLuckyList()">
            <input type="radio" name="tab-group" ng-init="checked = 'underway'" ng-model="checked" value="underway" class="hide">正在进行</label>
    </li>
    <li class="col-xs-6">
        <label class="ng-label small active-{{ checked == 'coming' }}" ng-click="getStartedLuckyList()">
            <input type="radio" name="tab-group" ng-model="checked" value="coming" class="hide">即将开始</label>
    </li>
</ul>
<div class="flex-item scroll">
    <div class="text-center text-grey box box-lg" ng-show="!loaded">loading</div>
    <div ng-repeat="auction in auctions" ng-show="loaded">
        <a ng-click="next()" ng-href="#/auction/{{ auction.id}}" class="block box info-section">
            <div class="thumbnail">
                <img class="block" ng-src="{{IMG_PATH + auction.cover }}" alt="">
            </div>
            <p class="text-light-grey big nowrap">{{ auction.title}}</p>
            <p class="ng-price x-small">
                <span class="box-r">{{ auction.price }}</span>
                <span class="chosen">底价</span>
            </p>
            <div class="text-grey nowrap">
                剩余时间：
                <span class="text-red">
                    <timer end-time="getEndTime('10 15 2014 12:00:00')">{{days}}天{{hours}}小时{{minutes}}分{{seconds}}秒.</timer>
                </span>
            </div>
        </a>
        <div class="line"></div>
    </div>
</div>
