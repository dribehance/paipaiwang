var shoppingCartPushController = function($scope,$http){
	$scope.color = 'black';
	$scope.size = 'S';
	$scope.amount = 1;
	var limit = 10;
	$scope.amountMinus = function() {
		$scope.amount--;
		if ( $scope.amount < 1 ) {
			$scope.amount = 1;
		}
	}
	$scope.amountPlus = function() {
		$scope.amount++;
		if ( $scope.amount > limit ) {
			$scope.amount = limit;
		}
	}
};
