<div ng-include="'partials/banner.html'"></div>
<div class="text-center text-grey box box-lg" ng-show="!loaded">正在加载</div>
<div ng-show="loaded">
    <div class="box">
        <h3 class="ng-title big">{{ auction.title }}</h3>
        <div class="row">
            <div class="col-xs-6">
                <span class="ng-price small box-r">{{ auction.price }}</span>
                <span class="chosen small">底价</span>
            </div>
            <div class="col-xs-6 text-right">
                <span class="text-grey box-r small">加价幅度</span>
                <span class="text-red">{{ auction.increase_price }}</span>
            </div>
        </div>
    </div>
    <div class="ng-tab">
        <ul class="ls">
            <li class="col-xs-4">
                <label class="ng-label small active-{{ checked == 1 }}">
                    <input type="radio" name="tab-group" ng-init="checked = 1" ng-model="checked" value="1" class="hide">商品介绍</label>
            </li>
            <li class="col-xs-4">
                <label class="ng-label small active-{{ checked == 2 }}">
                    <input type="radio" name="tab-group" ng-model="checked" value="2" class="hide">品牌展示</label>
            </li>
            <li class="col-xs-4">
                <label class="ng-label small active-{{ checked == 3 }}">
                    <input type="radio" name="tab-group" ng-model="checked" value="3" class="hide">出价记录</label>
            </li>
        </ul>
        <div class="ng-tab-content">
            <div class="ng-tab-content" ng-show="checked == 1">
                <div ng-bind-html="trustAsHtml(auction.introduction)"></div>
            </div>
            <div class="ng-tab-content" ng-show="checked == 2">
                <div ng-include="'partials/auction/brand.html'"></div>
            </div>
            <div class="ng-tab-content" ng-show="checked == 3">
                <div ng-include="'partials/auction/record.html'"></div>
            </div>
        </div>
    </div>
</div>
