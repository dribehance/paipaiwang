<label class="block edit-label needle box box-lg box-lr">
	<span class="text-grey box">收货人</span>
	<input type="text" class="block box text-light-grey pretty-input" ng-model="signProfile.addressee" value="{{ signProfile.addressee }}">
</label>
<label class="block edit-label needle box box-lg box-lr box-shadow">
	<span class="text-grey box">手机号码</span>
	<input type="text" class="block box text-light-grey pretty-input" ng-model="signProfile.mobile_phone" value="{{ signProfile.mobile_phone }}">
</label>
<label class="block edit-label needle box box-lg box-lr box-shadow">
	<span class="text-grey box">邮政编码</span>
	<input type="text" class="block box text-light-grey pretty-input" ng-model="signProfile.post_code" value="{{ signProfile.post_code }}">
</label>
<label class="block edit-label needle box box-lg box-lr box-shadow">
	<span class="text-grey box">所在地区</span>
	<a ng-click="getProvince()">{{ signProfile.province?signProfile:"省份" }}{{ signProfile.city ?signProfile.city:"城市"}}</a>
</label>
<label class="block edit-label needle box box-lg box-lr box-shadow">
	<span class="text-grey box">详细地址</span>
	<input type="text" class="block box text-light-grey pretty-input" value="{{ signProfile.province + signProfile.city + signProfile.street }}">
</label>
<a href="#/address_delete" class="text-red block box box-lg">删除收货地址</a>
<div class="line"></div>