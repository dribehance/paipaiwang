<div class="box info-section bg-white">
    <div class="thumbnail">
        <img class="block" ng-src="{{ exchange.cover }}" alt="">
    </div>
    <p class="text-light-grey big nowrap">{{ exchange.title }}</p>
    <p class="ng-price small">￥{{ exchange.price }}</p>
</div>
<div class="line"></div>
<div class="box box-lg box-shadow">
    <div class="row">
        <div class="col-xs-6 text-light-grey">
            数量
        </div>
        <div class="col-xs-6">
            <div class="amount-box">
                <div class="input-group has-error">
                    <span class="input-group-addon" ng-click="amountMinus()">-</span>
                    <input class="form-control text-center" type="number" min="0" max="99" ng-model="exchange.quantity">
                    <span class="input-group-addon" ng-click="amountPlus()">+</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="box box-lg box-mt box-shadow">
    <div class="row">
        <div class="col-xs-6 text-light-grey">
            合计
        </div>
        <div class="col-xs-6 text-right">
            <span class="text-red">{{ exchange.total }}</span>
        </div>
    </div>
</div>
<div class="line"></div>
