var productController = function($scope, $http, $rootScope, $routeParams,_Nofication,_User,_EventHandler) {
    var productID = $routeParams.productID;
    var remoteData = $rootScope.host + "app/BaseProducts/detail?id=" + productID;
    var limit = 10;
    $scope.pageName = "商品详情";
    $scope.footer = true;
    $http.get(remoteData).success(function(data) {
        $scope.product = data.product;
        $scope.records = data.record;
        $scope.brand = data.brand;
        $scope.comments = data.comment;

        $scope.product.color = 'black';
        $scope.product.size = 'S';
        $scope.product.amount = 1;

        $scope.getArray = function(n) {
            return new Array(n);
        };
        $scope.pushToCart = function() {
            if (!_User.isLogin()) {
                _Nofication.alert("需要登录才能够使用购物车功能","购物提示","确定",function(){});
                return;
            }
            $scope.slideUp = 'active';
            $scope.footer = false;
        }
        $scope.goBuy = function() {
            if (!_User.isLogin()) {
                _Nofication.alert("需要登录才能够使用购物车功能","购物提示","确定",function(){});
                return;
            }
            $scope.slideUp = 'active';
            $scope.footer = false;
        }
        $scope.close = function() {
            $scope.slideUp = '';
            $scope.footer = true;
        }
        $scope.storeToCart = function() {
            console.log($scope.product);
            var remoteData = $rootScope.host + "app/Order/addToShoppingCart?user_id="+_User.get().user_id+"&product_id="+$scope.product.id+"&total="+$scope.product.amount+"&price="+$scope.product.price;
            $http.get(remoteData).success(function(data){
                if (data.status) {
                    _Nofication.alert("成功加入购物车","购物提示","确定",function(){});
                }
            }).error(function(data, status, headers, config) {
                
                console.log("push to cart error");
            });
            $scope.slideUp = '';
            $scope.footer = true;

        }

        $scope.amountMinus = function() {
            $scope.product.amount--;
            if ($scope.product.amount < 1) {
                $scope.product.amount = 1;
            }
        }
        $scope.amountPlus = function() {
            $scope.product.amount++;
            if ($scope.product.amount > limit) {
                $scope.product.amount = limit;
            }
        }

    }).error(function(data, status, headers, config)  {
        _EventHandler.onRequestError(data, status, headers, config);
    });
};
