var signUpController = function ($window,$scope,$rootScope,$http,$location,_User,_Nofication,_EventHandler) {
    $scope.pageName = "注册";
    $scope.loaded = false;
    $scope.fetching = false;
    $scope.signing = false;
    $scope.userExist = false;
    $scope.step = 1;
    $scope.signProfile = {
        "telephone":"",
        "passwordInit":"",
        "passwordAgain":"",
        "vertifyCode":""
    };
    $scope.getCode = function() {
        if ( !$scope.signProfile.telephone ) {
            _Nofication.alert("请确保输入正确的手机号码","错误提示","确定",function(){});
            return;
        }
        $scope.loaded = false;
        $scope.manualGet();
    }
    $scope.setPassword = function () {
        if ( !$scope.signProfile.vertifyCode || ($scope.signProfile.vertifyCode != $scope.remoteCode )) {
            _Nofication.alert("请确保输入正确的手机验证码","错误提示","确定",function(){});
            return;
        }
        $scope.loaded = true;
        $scope.pageName = "设置密码";
        $scope.step = 3;
    }
    // 手动获取验证码
    $scope.manualGet = function() {
        var remoteData = $rootScope.host + "app/Login/getIdentifyCode?telephone="+$scope.signProfile.telephone;
        $scope.fetching = true;
        $http.get(remoteData).success(function(data){
            $scope.loaded = true;
            $scope.fetching = false;

            if (data.userExist) {
                $scope.userExist = true;
                return;
            }


            $scope.pageName = "获取验证码";
            $scope.step = 2;
            $scope.remoteCode = data.code;
        }).error(function(data, status, headers, config) {
            _EventHandler.onRequestError(data,status,headers,config);
        });
    }
    $scope.signUp = function () {
        if ( !$scope.signProfile.passwordInit || !$scope.signProfile.passwordAgain) {
            _Nofication.alert("密码不能为空","错误提示","确定",function(){});
            return;
        }
        if ( $scope.signProfile.passwordInit != $scope.signProfile.passwordAgain) {
            _Nofication.alert("两次输入的密码不相同","错误提示","确定",function(){});
            return;
        }
        $scope.signing = true;
        var remoteData = $rootScope.host + "app/Login/register?telephone="+$scope.signProfile.telephone+"&password="+$scope.signProfile.password;
        $http.get(remoteData).success(function(data){
            $scope.signing = false;
            if (data.status != 1 ) {
                $scope.userExist = true;
                $location.path("/signUp").replace();
                return;
            }
            $scope.userExist = false;
            _User.set("user",data.user);
            $location.path("/user").replace();
        }).error(function(data, status, headers, config) {
            _EventHandler.onRequestError(data, status, headers, config);
        });
    }
}
