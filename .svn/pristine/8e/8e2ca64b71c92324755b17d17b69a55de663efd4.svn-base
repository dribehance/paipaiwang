var shoppingCartController = function($rootScope,$scope, $http,$location,_User,_Nofication,_EventHandler) {
    $scope.$parent.active = "shopping_cart";
    $scope.pageName = "购物车";
    $scope.actionMenu = "编辑";
    $scope.loaded = false;
    var remoteData = $rootScope.host + "app/Order/myShoppingCartList?user_id="+_User.get().user_id;
    $http.get(remoteData).success(function(data){
        $scope.loaded = true;
        $scope.items = data.shoppingCart;
    }).error(function(data, status, headers, config ){
        _EventHandler.onRequestError(data, status, headers, config);
    });
    $scope.sum = function() {
        var sum = 0;
        angular.forEach($scope.items, function(item) {
            sum += item.clearing ? item.orderPrice*item.total : 0;
        });
        return sum;
    }
    var flag = 0;
    $scope.all = function() {
        if (flag % 2 == 0) {

            angular.forEach($scope.items, function(item) {
                item.clearing = true;
            });
            $scope.total = true;
            flag++;
        } else {
            angular.forEach($scope.items, function(item) {
                item.clearing = false;
            });
            $scope.total = false;
            flag++;
        }
    }
    $scope.toggleAction = function() {
        if ($scope.actionMenu == '编辑') {
            $scope.actionMenu = '完成';
        } else {
            $scope.actionMenu = '编辑';
        }
    }
    $scope.removeItem = function() {
        var removeItems = [];
        $scope.items = $scope.items.filter(function(item) {
            if ( item.clearing ) {
                removeItems.push(item);
            }
            return !item.clearing;
        });
        angular.forEach(removeItems,function(item){
            var remoteData = $rootScope.host + ""
            $http.get(remoteData).success(function(data){

            });
        });
    }
    $scope.onConfirm = function(index) {
        if (index != 1) {
            return;
        }
        $scope.$apply(function(){
            
            var orderID = buyableItem.map(function(item){
                return item.id;
            }).join(",");
            
            var remoteData = $rootScope.host + "app/Order/buyProduct?user_id="+_User.get().user_id+"&order_id="+orderID;
            $http.get(remoteData).success(function(data){
                if ( data.status == 1 ) {
                    $rootScope.slide = "slide-left";
                    $rootScope.paymentMessage = "支付成功";
                }else {
                    $rootScope.paymentMessage = "支付失败";
                }
                if ( data.status == -1 ) {
                    $rootScope.paymentError = "拍币不足";
                }
                $location.path("/payment").replace();
                
            }).error(function(data, status, headers,config ) {
                _EventHandler.onRequestError(data, status, headers, config);
            });
        });
    }
    $scope.buy = function () {
        $scope.buyableItem = [];
        angular.forEach($scope.items, function(item) {
            if (item.clearing) {
                $scope.buyableItem.push(item);
            }
        });
        if ( $scope.buyableItem.length == 0) {
            return;
        }
        _Nofication.confirm("确认结算将会扣除相应的拍币，是否扣除？","支付提示",["确定","取消"],$scope.onConfirm);
    }
};
